<h2>Sign up</h2>

=simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| 
  =f.error_notification 
  =f.input :email, :required => true, :autofocus => true,:label => "Логин"
  =f.input :password, :required => true,:label => "Пароль"
  =f.input :password_confirmation, :required => true,:label=> "Подтверждение пароля"
  =f.submit "Sign up" 


=render :partial => "devise/shared/links" 

